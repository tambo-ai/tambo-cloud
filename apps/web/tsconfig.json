{
  "extends": "@tambo-ai-cloud/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@tambo-ai-cloud/backend": ["../../packages/backend/src"],
      "@tambo-ai-cloud/schema": ["../../packages/db/src/schema"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "*.mjs",
    ".next/types/**/*.ts",
    "types/*.d.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
