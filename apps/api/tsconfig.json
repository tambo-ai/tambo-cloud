{
  "extends": "@tambo-ai-cloud/typescript-config/base",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@tambo-ai-cloud/backend": ["../../packages/backend/src"],
      "@tambo-ai-cloud/core": ["../../packages/core/src"],
      "@tambo-ai-cloud/db": ["../../packages/db/src"],
      "@tambo-ai-cloud/testing": ["../../packages/testing/src"]
    }
  }
}
