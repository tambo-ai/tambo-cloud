{
  "extends": "@tambo-ai-cloud/typescript-config/base",
  "compilerOptions": {
    // Extend the root directory one level up so that shared sources are included
    "rootDir": "..",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "paths": {
      "@tambo-ai-cloud/shared": ["../../packages/shared/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "./dist", "./docs"]
}
