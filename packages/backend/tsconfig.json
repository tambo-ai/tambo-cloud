{
  "extends": "@tambo-ai-cloud/typescript-config/base",
  "compilerOptions": {
    // Keep backend sources as first root directory
    "rootDir": "./src",
    // NEW - allow additional roots so paths under shared/src compile without error
    "rootDirs": ["./src", "../../packages/shared/src"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "paths": {
      "@tambo-ai-cloud/shared": ["../../packages/shared/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "./dist", "./docs"]
}
